<h1>Log in</h1>

<!-- form_tags may not be associate with a CRUD operation on a database Model.  Here, inputs get sent to 'sessions_path' -->
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Log in" %></p>
<% end %>