<div class="section group">
<!-- LEFT-HAND COLUMN -->
  <div class="col_1_of_1">
  <!-- put profile picture of host -->
  <p><img class="profile_pic" src=<%= @host.profile_pic %>></P>
  <p> <%= @host.f_name %> <%= @host.l_name %></p>
  </div>
</div>
<div class="section group">
    <div class="col_1_of_1">
    <h4>events</h4>
    <ul>
      <% @events.each do |event| %>
        <li><%= link_to event.title, "/events/#{event.id}" %></li>
        <li><img src=<%= event.venue.url%>></li>
        <li><img src=<%= event.pieces.first.url%>></li>
      
      <% end %>
    </ul>
    </div>
  </div>

